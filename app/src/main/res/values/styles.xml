<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppThemeNoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlainTextMediumLeftGray">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/charcoal_grey_50</item>
    </style>

    <style name="AddressInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/PlainTextMediumLeftGray</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textPostalAddress</item>
    </style>
    <style name="PlainTextSmallGreen">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/aqua_marine_text_color</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="PlainTextMediumLeft">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="PlainTextSmallLeft">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="PlainTextSmallCenterGray">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/charcoal_grey_50</item>
    </style>

    <style name="TitleTitle3LeftGray">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/charcoal_grey_50</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="GetRideVerticalDividersLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:showDividers">beginning|end</item>
        <item name="android:divider">?android:dividerVertical</item>
        <item name="android:layout_height">@dimen/GetRideRideConstraintItemHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="GetRideSmallIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">@dimen/RideDetailsInnerMargin</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="PlainTextBigLeft">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="PlainTextMediumCenter">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#3d4149</item>
    </style>

    <style name="BigAquaMarineButton">
        <item name="android:textAppearance">@style/ButtonsBigCenterWhite</item>
        <item name="android:background">@drawable/aqua_marine_bg</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="ButtonsBigCenterWhite">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PlainTextGreen">
        <item name="android:gravity">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/aqua_marine</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TitleTitle2Left">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="BookingDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

</resources>